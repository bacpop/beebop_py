  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "beebop/app.py",
        "FLASK_DEBUG": "1",
        "STORAGE_LOCATION": "./storage"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "rq worker",
      "request": "launch",
      "type": "debugpy",
      "program": "/home/athapar/miniconda3/envs/beebop_py/bin/rq",
      "args": ["worker"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
